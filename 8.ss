(define (greatest-consecutive-product-5digits num)
  (local[(define (consecutive-helper num max)
           (cond[(< num 100000) max]
                [(> (product-of-digits (remainder num 100000)) max)
                 (consecutive-helper (quotient num 10) (product-of-digits (remainder num 100000)))]
                [else (consecutive-helper (quotient num 10) max)]))]
    (consecutive-helper num 0)))

(define (product-of-digits num)
  (cond[(zero? num) 1]
       [else (* (remainder num 10) (product-of-digits (quotient num 10)))]))

(greatest-consecutive-product-5digits )